void addMoney() {
	int temp = money;
	temp += salary*2;
	if (temp &lt;= MONEY_MAX) {
		money=temp;
	} else {
		money=MONEY_MAX;
	}

	temp = wallet;
	temp += salary;
	if (temp &lt;= MONEY_MAX) {
		wallet=temp;
	} else {
		wallet=MONEY_MAX;
	}
}

void giveMoney() {
	int temp = money;
	temp -= salary;

	if (temp &gt;= 0) {
		money=temp;
	} else {
		money=0;
	}
}

void personLooseMoney() {
	int temp = wallet;
	temp -= personExpense;

	if (temp &gt;= 0) {
		wallet=temp;
	} else {
		wallet=0;
	}
}

